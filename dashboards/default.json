{
  "name": "Cryptocoin Dashboard",
  "layout": {
    "columns": 6,
    "rows": 4
  },
  "plugins": {
    "ds-cryptocompare": { 
      "module": "plugins/cryptocompare-plugin"
    },
    "ds-cryptocompare-current": { 
      "module": "plugins/cryptocompare-current-plugin"
    }
  },
  "widgets": [
    {
      "position": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 1
      },
      "widget": "vudash-widget-time"
    },
    {
      "position": {
        "x": 0,
        "y": 1,
        "w": 3,
        "h": 2
      },
      "datasource": {
        "name": "ds-cryptocompare",
        "options": {
          "symbol": "BTC"
        }
      },
      "options": {
        "schedule": 86400000,
        "description": "Bitcoin Price (GBP) / days ago",
        "labels": [7,6,5,4,3,2,1]
      },
      "widget": "@vudash/widget-chart"
    },
    {
      "position": {
        "x": 3,
        "y": 1,
        "w": 3,
        "h": 2
      },
      "datasource": {
        "name": "ds-cryptocompare",
        "options": {
          "symbol": "ETH"
        }
      },
      "options": {
        "schedule": 86400000,
        "description": "Ethereum Price (GBP) / days ago",
        "labels": [7,6,5,4,3,2,1]
      },
      "widget": "@vudash/widget-chart"
    },
    {
      "position": {
        "x": 0,
        "y": 3,
        "w": 1,
        "h": 1
      },
      "datasource": {
        "name": "ds-cryptocompare-current",
        "options": {
          "symbol": "ETH"
        }
      },
      "options": {
        "schedule": 30000,
        "description": "Current Price / ETH"
      },
      "widget": "vudash-widget-statistic"
    },
    {
      "position": {
        "x": 1,
        "y": 3,
        "w": 1,
        "h": 1
      },
      "datasource": {
        "name": "ds-cryptocompare-current",
        "options": {
          "symbol": "BTC"
        }
      },
      "options": {
        "schedule": 30000,
        "description": "Current Price / BTC"
      },
      "widget": "vudash-widget-statistic"
    },
    {
      "position": {
        "x": 2,
        "y": 3,
        "w": 1,
        "h": 1
      },
      "datasource": {
        "name": "ds-cryptocompare-current",
        "options": {
          "symbol": "XRP"
        }
      },
      "options": {
        "schedule": 30000,
        "description": "Current Price / XRP"
      },
      "widget": "vudash-widget-statistic"
    },
    {
      "position": {
        "x": 3,
        "y": 3,
        "w": 1,
        "h": 1
      },
      "datasource": {
        "name": "ds-cryptocompare-current",
        "options": {
          "symbol": "LTC"
        }
      },
      "options": {
        "schedule": 30000,
        "description": "Current Price / LTC"
      },
      "widget": "vudash-widget-statistic"
    },
    {
      "position": {
        "x": 4,
        "y": 3,
        "w": 1,
        "h": 1
      },
      "datasource": {
        "name": "ds-cryptocompare-current",
        "options": {
          "symbol": "XLR"
        }
      },
      "options": {
        "schedule": 30000,
        "description": "Current Price / XLR"
      },
      "widget": "vudash-widget-statistic"
    },
    {
      "position": {
        "x": 5,
        "y": 3,
        "w": 1,
        "h": 1
      },
      "datasource": {
        "name": "ds-cryptocompare-current",
        "options": {
          "symbol": "XEM"
        }
      },
      "options": {
        "schedule": 30000,
        "description": "Current Price / XEM"
      },
      "widget": "vudash-widget-statistic"
    }
  ]
}
